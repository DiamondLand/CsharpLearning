<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Приложение" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="200"/>
        <Button Content="Найти минимальное число" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,10,0,0" Click="Button_Click"/>
        <Label Content="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <Label x:Name="ResultLabel" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0"/>
    </Grid>
</Window>
