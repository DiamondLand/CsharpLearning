<Window x:Class="BitcoinTradingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bitcoin Trading App" Height="350" Width="500">
    <Grid Background="#F0F8FF">
        <StackPanel Margin="20">
            <TextBlock Text="Введите курсы биткоина для каждого дня:" FontSize="14" Foreground="Black"/>
            <TextBox x:Name="InputTextBox" TextWrapping="Wrap" AcceptsReturn="True" Height="100" VerticalScrollBarVisibility="Auto" Margin="0,5,0,10"/>
            <Button Content="Рассчитать" Click="CalculateButton_Click" Width="100" Height="30" FontSize="12" Margin="0,0,0,10" Background="#4682B4" Foreground="White"/>
            <TextBlock Text="Результат:" FontSize="14" Foreground="Black" Margin="0,0,0,5"/>
            <TextBox x:Name="OutputTextBox" IsReadOnly="True" Height="50" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>
