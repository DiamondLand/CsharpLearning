<Window x:Class="SierpinskiTriangle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sierpinski Triangle" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель с кнопкой -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="Нарисовать" Click="DrawButton_Click"/>
            <TextBlock Text="Действий: "/>
            <TextBlock x:Name="actionsCountTextBlock" Text="0"/>
        </StackPanel>

        <!-- Canvas для отображения треугольника Серпинского -->
        <Canvas x:Name="canvas" Grid.Row="1" Background="White"/>
    </Grid>
</Window>
